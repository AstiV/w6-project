<style>
    .Waiting {
        background-color: var(--color-waiting);
    }

    .Confirmed {
        background-color: var(--color-confirmed);
    }

    .Cancelled {
        background-color: var(--color-cancelled);
    }

    .status {
        width: 12rem;
        text-align: center;
        border-radius: 5px;
        padding: .5rem 2rem;
    }

    .details {
        margin: 40px 0;
    }

    .details a {
        text-decoration: none;
        color: var(--headline-text);
    }

    .meeting-card {
        width: 70%;
        height: 180px;
        border: 1.5px solid var(--card-border);
        padding: 3rem 2rem;
        border-radius: 0 0 5px 5px;
        display: flex;
        justify-content: space-between;
        margin: 5rem auto;
        position: relative;
    }

    .meeting-card:hover {
        background-color: var(--background-grey-color);
    }

    .create-meeting-btn {
        border-radius: 45px;
        width: 25rem;
        height: 4rem;
        cursor: pointer;
        text-decoration: none;
        border: 2px solid var(--card-border);
        padding: 0.5rem 4rem;
        color: #000000;
    }

    .create-meeting-btn:hover {
        background-color: var(--background-grey-color);
    }

    .create-meeting-btn:active {
        box-shadow: 0 1px rgba(102, 102, 102, 0.2);
        transform: translateY(0.5px);
    }


    .case-title a {
        font-size: 2.2rem;
        text-decoration: none;
        color: inherit;
    }

    .case-title a::after {
        content: "";
        width: 100%;
        height: 100%;
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
    }

    .meeting-overview-header {
        display: flex;
        justify-content: space-between;
    }
</style>

{{message}}
<div class="meeting-overview-header">
    <h1>Meetings overview</h1>
    <a class="create-meeting-btn" href="/meeting/create" role="button">Create new meeting</a>
</div>

{{#each meetings}}
<div class="meeting-card">
    <p class="case-title">
        <a href="/meeting/show/{{id}}" <strong>{{title}}</strong>
        </a>
    </p>
    <div>

        <p class="{{status}} status">{{status}}</p>
        <div class="details">
            <a href="/meeting/show/{{id}}">See more details</a>
        </div>
    </div>
</div>
{{/each}}