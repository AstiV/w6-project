<style>
    form {
        display: flex;
        flex-wrap: wrap;
    }

    form div {
        width: 100%;
        margin: 3rem 0 2rem;
        position: relative;
    }

    form input {
        width: 30rem;
        height: 4rem;
    }

    form label {
        position: absolute;
        top: -2.5rem;
        left: 0;
    }

    .error-msg {
        background-color: rgba(226, 146, 146, 0.493);
        display: inline-block;
        padding: 1rem 2rem;
        border-radius: 5px;
    }
</style>

<h1>Create new meeting</h1>

<p class="error-msg">
    {{message}}
</p>

<form action="/meeting/create" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title">
    </div>

    <div>
        <label for="woEmail">To assign a Wellfare officer enter their email:</label>
        <input type="text" name="woEmail">
    </div>

    <div>
        <label for="translatorEmail">To assign a Translator enter their email:</label>
        <input type="text" name="translatorEmail">
    </div>

    <div>
        <label for="participants">Other participants:</label>
        <input type="text" name="participants">
    </div>

    <div>
        <label for="caseInfo">Case Information:</label>
        <input type="text" name="caseInfo">
    </div>

    <div>
        <label for="address">Address:</label>
        <input type="text" name="address">
    </div>

    <div>
        <label for="date">Date:</label>
        <input type="text" name="date">
    </div>

    <div>
        <label for="time">Time:</label>
        <input type="text" name="time">
    </div>

    <button type="submit">Create new meeting</button>
</form>