<h1>Edit your Profile</h1>

{{#if translator}} {{translator}}

<form action="/profile/edit" method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" class="form-control">
        <span class="current-value">Current Username: {{translator.user.username}}</span>
    </div>

    <div class="form-group">
        <p>Role</p>
        <label for="Volunteer">Volunteer</label>
        <input id="Volunteer" type="radio" name="role" class="form-control" value="Volunteer" checked="checked">
        <label for="Professional">Professional</label>
        <input id="Professional" type="radio" name="role" class="form-control" value="Professional"> {{#if translator.role}}
        <br>
        <span class="current-value">Current Role: {{translator.role}}</span>
        {{/if}}
    </div>

    {{#if translator.price}}
    <div class="form-group">
        <label for="price">Fee in € per hour</label>
        <input id="price" type="number" name="price" class="form-control">
        <span class="current-value">Current Fee: € {{translator.price}}</span>
    </div>
    {{/if}}

    <div class="form-group">
        <label for="email">E-Mail</label>
        <input id="email" type="text" name="email" class="form-control">
        <span class="current-value">Current E-Mail: {{translator.user.email}}</span>
    </div>

    <div class="form-group">
        <label for="telephone">Phone Number</label>
        <input id="telephone" type="tel" name="telephone" class="form-control" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">        {{#if
        translator.telephone}}
        <span class="current-value">Current Phone Number: {{translator.telephone}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="location">Location</label>
        <input id="location" type="text" name="location" class="form-control"> {{#if translator.location}}
        <span class="current-value">Current Location: {{translator.location}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="language">Add Language</label>
        <input id="language" type="text" name="language" class="form-control">
        <label for="level">Level</label>
        <select name="level" id="level">
            <option value="A1">A1</option>
            <option value="A2">A2</option>
            <option value="B1">B1</option>
            <option value="B2">B2</option>
            <option value="C1">C1</option>
            <option value="C2">C2</option>
        </select>
    </div>

    <div class="form-group">
        <label for="background">Background</label>
        <input id="background" type="text" name="background" class="form-control"> {{#if translator.background}}
        <span class="current-value">Current Background: {{translator.background}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="preferedSetting">Preferred Setting</label>
        {{!-- <input id="preferedSetting" type="text" name="preferedSetting" class="form-control"> --}}
        <textarea cols="50" rows="3" placeholder="Describe your setting preferences here..."></textarea> {{#if translator.preferedSetting}}
        <span class="current-value">Current Setting Preferences: {{translator.preferedSetting}}</span>
        {{/if}}
    </div>


    <button type="submit">Save Changes</button>


</form>
{{/if}}

<p>{{wo}}</p>