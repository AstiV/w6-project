<h1>Edit your Profile</h1>

{{#if translator}}
<form action="/profile/edit" method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" class="form-control">
        <span class="current-value">Current Username: {{translator.user.username}}</span>
    </div>

    <div class="form-group">
        <p>Role</p>
        <label for="Volunteer">Volunteer</label>
        <input id="Volunteer" type="radio" name="role" class="form-control" value="Volunteer" onclick="ShowHidePrice()">
        <label for="Professional">Professional</label>

        <input id="Professional" type="radio" name="role" class="form-control" value="Professional" onclick="ShowHidePrice()">        {{#if
        translator.role}} <span class="current-value">Current Role: {{translator.role}}</span>
        {{/if}}
    </div>

    {{#if isProfessional}}
    <div id="showPrice" class="form-group" style="display: block">
        <label for="price">Fee in € per hour</label>
        <input id="price" type="number" name="price" class="form-control">
        <span class="current-value">Current Fee: € {{translator.price}}</span>
    </div>
    {{/if}}

    <div id="showPrice" class="form-group" style="display: none">
        <label for="price">Fee in € per hour</label>
        <input id="price" type="number" name="price" class="form-control"> {{#if translator.price}}
        <span class="current-value">Current Fee: € {{translator.price}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="email">E-Mail</label>
        <input id="email" type="text" name="email" class="form-control">
        <span class="current-value">Current E-Mail: {{translator.user.email}}</span>
    </div>

    <div class="form-group">
        <label for="telephone">Phone Number</label>
        <input id="telephone" type="tel" name="telephone" class="form-control" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">        {{#if
        translator.telephone}}
        <span class="current-value">Current Phone Number: {{translator.telephone}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="location">Location</label>
        <input id="location" type="text" name="location" class="form-control"> {{#if translator.location}}
        <span class="current-value">Current Location: {{translator.location}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <div id="language-input-wrapper">
            <label for="language">Add Language</label>
            <select name="language" id="language">
                <option value=""></option>
                <option value="Oromo">Oromo</option>
                <option value="Dari">Dari</option>
                <option value="Fula">Fula</option>
                <option value="Maninka">Maninka</option>
                <option value="Tigrinya">Tigrinya</option>
                <option value="Wolof">Wolof</option>
            </select>
            <label for="level">Level</label>
            <select name="level" id="level">
                <option value=""></option>
                <option value="A1">A1</option>
                <option value="A2">A2</option>
                <option value="B1">B1</option>
                <option value="B2">B2</option>
                <option value="C1">C1</option>
                <option value="C2">C2</option>
            </select>
        </div>
        <button type="button" id="add-input-btn">+</button>
    </div>

    <div class="form-group">
        <label for="background">Background</label>
        <input id="background" type="text" name="background" class="form-control"> {{#if translator.background}}
        <span class="current-value">Current Background: {{translator.background}}</span>
        {{/if}}
    </div>

    <div class="form-group">
        <label for="preferedSetting">Preferred Setting</label>

        {{!--
        <input id="preferedSetting" type="text" name="preferedSetting" placeholder="Describe your setting preferences here..." class="form-control">        --}}
        <textarea cols="50" rows="3" name="preferedSetting">{{translator.preferedSetting}}</textarea>

    </div>


    <button type="submit">Save Changes</button>


</form>

